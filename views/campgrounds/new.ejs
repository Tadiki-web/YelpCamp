<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add your new Campground!!</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required >
                <div class="valid-feedback">This name hasn't been taken!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
            </div>
            <div class="mb-3">
                <label for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0" aria-label="Price" name="campground[price]" id="price" aria-describedby="price-label" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>  
            </div>
            

            <button class="btn btn-success">Add campground</button>
        </form>
        <div class="mb-3">
            <button class="btn "><a href="/campgrounds">Cancel</a></button>
        </div>
        
    </div>
</div>

